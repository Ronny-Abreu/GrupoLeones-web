---
import "../styles/global.css";
import Footer from '../components/ui/sections/Footer.astro';

const { title = "Grupo Leones", showFooter = true, descriptionOnPage = "Hola" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={descriptionOnPage} />
		<meta property="og:url" content="https://www.grupoleones.com.do" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Grupo Leones Website" />
		<meta property="og:description" content="Grupo Leones impulsa el crecimiento de tu negocio..." />
		<meta name="author" content="Jendry Abreu y Ronny De León" />
		<meta property="og:image" content="https://www.grupoleones.com.do/og.jpg" />
		<meta property="og:locale" content="es_ES" />
		<meta property="og:site_name" content="Grupo Leones" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@GrupoLeones" />
		<meta name="twitter:creator" content="@tuerredev" />
		<meta name="twitter:title" content="Grupo Leones Enterprise" />
		<meta name="twitter:description" content="Impulsa tu PYME con Grupo Leones..." />
		<meta name="twitter:image" content="https://www.grupoleones.com.do/og.jpg" />

		<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Grupo Leones",
  "url": "https://www.grupoleones.com.do",
  "logo": "https://www.grupoleones.com.do/images/favicon.svg",
