    "https://www.instagram.com/grupo._leones/"
  ],
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Santo Domingo",
    "addressRegion": "Distrito Nacional",
    "postalCode": "11011 ",
    "addressCountry": "DO"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1 829-671-0425",
    "contactType": "customer service",
    "email": "info@grupoleones.com"
  },
  "makesOffer": [
    {
      "@type": "Service",
      "name": "Leones Capital - Préstamos rápidos y asesoría",
      "description": "Préstamos rápidos y responsables con asesoría financiera para impulsar tu negocio.",
      "serviceType": "FinancialService",
      "url": "https://www.grupoleones.com.do/filiales/capital"
    },
    {
      "@type": "Service",
      "name": "Leones Seguros - Seguros accesibles",
      "description": "Seguros accesibles para ti y tu emprendimiento, protegiendo tus activos y futuro.",
      "serviceType": "FinancialService",
      "url": "https://www.grupoleones.com.do/filiales/seguros"
    },
    {
      "@type": "Service",
      "name": "Leones Finanzas - Contabilidad y educación financiera",
      "description": "Servicios de contabilidad, control de gastos y educación financiera para una gestión sólida.",
      "serviceType": "FinancialService",
      "url": "https://www.grupoleones.com.do/filiales/finanzas"
    },
    {
      "@type": "Service",
      "name": "Leones Marketing - Estrategias de marketing digital",
      "description": "Estrategias de marketing digital para potenciar tu marca, visibilidad y ventas online.",
      "serviceType": "MarketingService",
      "url": "https://www.grupoleones.com.do/filiales/marketing"
    },
    {
      "@type": "Service",
      "name": "Leones Talento - Marca personal y estrategia digital",
      "description": "Marca, redes sociales y estrategia digital para el crecimiento profesional y empresarial.",
      "serviceType": "ProfessionalService",
      "url": "https://www.grupoleones.com.do/filiales/talento"
    },
    {
      "@type": "Service",
      "name": "Leones Impacto - Responsabilidad social",
      "description": "Proyectos de responsabilidad social y alianzas que transforman comunidades y el entorno.",
      "serviceType": "CommunityService",
      "url": "https://www.grupoleones.com.do/filiales/impacto"
    }
  ]
}
</script>
	</head>
	<body>
		<slot />
		{showFooter && <Footer />}
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	html,
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
		color: white;
		background-color: #000000;
		font-family: 'Poppins', system-ui, sans-serif;
		overflow-x: hidden;
		max-width: 100vw;
	}

	* {
		box-sizing: border-box;
	}

	/* Animation Classes */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInLeft {
		from {
			opacity: 0;
			transform: translateX(-30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes fadeInRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.animate-fade-in-down {
		animation: fadeInDown 0.8s ease-out forwards;
	}

	.animate-fade-in-left {
		animation: fadeInLeft 0.8s ease-out forwards;
	}

	.animate-fade-in-right {
		animation: fadeInRight 0.8s ease-out forwards;
	}

	.animation-delay-300 {
		animation-delay: 0.3s;
		opacity: 0;
	}

	.animation-delay-500 {
		animation-delay: 0.5s;
		opacity: 0;
	}

	.animation-delay-700 {
		animation-delay: 0.7s;
		opacity: 0;
	}
</style>